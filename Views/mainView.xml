            <control progid="DecalControls.FixedLayout" clipped="">
              <control progid="DecalControls.StaticText" name="QuestsListName" left="1" top="4" width="200" height="17" text="Quest Flag"/>
              <control progid="DecalControls.StaticText" name="QuestsListRepeatTime" left="280" top="4" width="67" height="17" justify="Right" text="ReadyIn"/>
