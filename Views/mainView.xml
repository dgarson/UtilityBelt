      <control progid="DecalControls.FixedLayout" clipped="">
        <control progid="DecalControls.List" name="VisualNavSettingsList" left="0" top="0" width="400" height="200">
          <column progid="DecalControls.CheckColumn" name="VisualNavSettingsListEnabled"/>
          <column progid="DecalControls.IconColumn" name="VisualNavSettingsListColor" fixedwidth="30" />
          <column progid="DecalControls.TextColumn" name="VisualNavSettingsListSetting" />
        </control>
        <control progid="DecalControls.Checkbox" name="VisualNavSaveNoneRoutes" left="8" top="210" width="400" height="16" text="(Experimental) show embedded nav routes" />

      </control>

    </page>
    <page label="Settings">
      <control progid="DecalControls.FixedLayout" clipped="">
        <control progid="DecalControls.Checkbox" name="PluginDebug" left="8" top="8" width="250" height="16" text="Show Debug Messages"/>
        <control progid="DecalControls.Checkbox" name="PluginCheckForUpdates" left="8" top="26" width="250" height="16" text="Check for updates on login"/>
        <control progid="DecalControls.PushButton" name="DoUpdateCheck" left="8" top="190" width="130" height="20" text="Check for Update"/>
